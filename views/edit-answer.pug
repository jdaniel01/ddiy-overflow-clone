extends index
include utils

block content
    link(rel='stylesheet' href='/stylesheets/single-question.css')
    if(!isUserLoggedIn)
        div(class='asked')
            div(class='asked-container')
                p(class='question-created') Answered By #{answer.createdAt}
            div(class='user-container')
            form(action= `/questions/${answer.id}/answers/edit` method= "post")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div(id="answer-edit")
                        div(class="question-white-background")
                            div(class='question-form')
                                div(class='question-body')
                                    h4(class='question-title') Please Edit Your Answer
                                    p(class='question-tip') Be specific as if you were trying to impress a famous scientist
                                    textarea(name="answer", cols="30", rows="10")= answer.answer
                                button(type="submit") Save Current Changes
